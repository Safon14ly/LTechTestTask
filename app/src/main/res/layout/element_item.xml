<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/space_base"
    android:layout_marginHorizontal="@dimen/space_normal">

    <ImageView
        android:id="@+id/vCover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="@dimen/space_normal"
        android:layout_marginVertical="@dimen/space_normal"
        android:layout_marginStart="@dimen/space_normal"
        android:foregroundGravity="center_vertical"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/vDescriptionContainer"
        android:layout_width="@dimen/space_zero"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_normal"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/vCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/vTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_micro"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="Алхимик"/>

        <TextView
            android:id="@+id/vDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_micro"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:text="Персонаж игры"/>

        <TextView
            android:id="@+id/vDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/space_micro"
            android:textColor="@color/black"
            tools:text="Когда-то"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>